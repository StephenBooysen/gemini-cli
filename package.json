{
  "name": "markdown-github-editor-cli",
  "version": "1.0.0",
  "description": "A CLI tool to clone a GitHub repo, edit markdown files, and push changes.",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "get:content": "node app.js",
    "start": "node server.js",
    "git:get": "git fetch --all;git reset --hard origin/main;",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js",
    "format": "prettier --write \"./*.js\" \"public/**/*.{js,css}\" \"services/**/*.js\" \"routes/**/*.js\" \"views/**/*.ejs\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"./*.js\" \"public/**/*.{js,css}\" \"services/**/*.js\" \"routes/**/*.js\" \"views/**/*.ejs\" --ignore-path .prettierignore"
  },
  "keywords": [
    "git",
    "markdown",
    "cli",
    "editor"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-ejs-layouts": "^2.5.1",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.20",
    "lunr": "^2.3.9",
    "marked": "^4.0.10",
    "open": "^10.1.0",
    "simple-git": "^3.22.0"
  },
  "repository": {},
  "bugs": {},
  "homepage": "",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.30.0",
    "eslint": "^9.30.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-jsdoc": "^51.2.3",
    "globals": "^16.2.0",
    "jsdoc": "^4.0.4",
    "prettier": "^3.6.2"
  }
}
